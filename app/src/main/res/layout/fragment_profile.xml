<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbackground"
    tools:context=".Fragment.ProfileFragment">

  <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
      android:id="@+id/swipeRefreshprofile"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <androidx.core.widget.NestedScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <de.hdodenhof.circleimageview.CircleImageView
                  android:id="@+id/imgAva"


                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="30dp"
                  android:src="@drawable/ic_launcher_background"
                  android:layout_width="150dp"
                  android:layout_height="150dp"
                  >
              </de.hdodenhof.circleimageview.CircleImageView>
              <ImageButton
                  android:layout_marginTop="-34dp"
                  android:layout_gravity="center"
                  android:id="@+id/imageButtonupfile"
                  android:layout_width="60dp"
                  android:layout_height="wrap_content"
                  android:background="#0F000000"
                  android:src="@android:drawable/ic_menu_camera" />
              <TextView
                  android:id="@+id/txtusername"
                  android:layout_marginTop="10dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Wiliam Snoe"
                  android:textColor="#fff"
                  android:textStyle="bold"
                  android:textSize="21sp"/>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_gravity="center"
                  android:layout_marginTop="20dp">
                  <Button
                      android:background="#23A3D8EF"
                      android:id="@+id/upload_to_sever"
                      android:text="Đổi Avatar"
                      android:gravity="center"
                      android:layout_gravity="center"
                      android:orientation="horizontal"
                      android:layout_marginBottom="10dp"
                      android:layout_width="150dp"
                      android:layout_height="40dp">


                  </Button>
                  <LinearLayout
                      android:background="#A8A3D8EF"

                      android:id="@+id/linv_cart"
                      android:orientation="horizontal"
                      android:paddingLeft="25dp"
                      android:layout_width="match_parent"
                      android:layout_height="50dp">
                      <ImageView
                          android:layout_width="36dp"
                          android:layout_height="36dp"
                          android:layout_gravity="center_vertical"
                          android:src="@drawable/ic_baseline_shopping_cart_24"/>
                      <TextView
                          android:textStyle="bold"
                          android:layout_gravity="center_vertical"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:paddingLeft="20dp"
                          android:text="Đơn Hàng Đang Có"/>


                  </LinearLayout>
                  <LinearLayout
                      android:background="#A8A3D8EF"
                      android:layout_marginTop="25dp"
                      android:id="@+id/linv_email"
                      android:orientation="horizontal"
                      android:paddingLeft="25dp"
                      android:layout_width="match_parent"
                      android:layout_height="50dp">
                      <ImageView
                          android:layout_width="36dp"
                          android:layout_height="36dp"
                          android:layout_gravity="center_vertical"

                          android:src="@drawable/ic_baseline_mail_outline_24"/>
                      <TextView
                          android:id="@+id/txt_email"
                          android:textStyle="bold"
                          android:layout_gravity="center_vertical"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:paddingLeft="20dp"
                          android:text="Wiliam@gmail.com"/>
                  </LinearLayout>
                  <LinearLayout
                      android:background="#A8A3D8EF"

                      android:id="@+id/linv_phone"
                      android:layout_marginTop="25dp"
                      android:orientation="horizontal"
                      android:paddingLeft="25dp"
                      android:layout_width="match_parent"
                      android:layout_height="50dp">
                      <ImageView
                          android:layout_width="36dp"
                          android:layout_height="36dp"
                          android:layout_gravity="center_vertical"

                          android:src="@drawable/ic_baseline_local_phone_24"/>
                      <TextView
                          android:id="@+id/phone"
                          android:textStyle="bold"

                          android:layout_gravity="center_vertical"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:paddingLeft="20dp"
                          android:text="+266 225 225"/>
                  </LinearLayout>
                  <LinearLayout
                      android:background="#A8A3D8EF"

                      android:id="@+id/linr_password"
                      android:layout_marginTop="25dp"
                      android:orientation="horizontal"
                      android:paddingLeft="25dp"
                      android:layout_width="match_parent"
                      android:layout_height="50dp">
                      <ImageView
                          android:layout_gravity="center_vertical"

                          android:layout_width="36dp"
                          android:layout_height="36dp"
                          android:src="@drawable/ic_baseline_vpn_key_24"/>
                      <TextView
                          android:textStyle="bold"

                          android:layout_gravity="center_vertical"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:paddingLeft="20dp"
                          android:text="Thay Đổi Mật Khẩu"/>
                  </LinearLayout>
                  <Button
                      android:id="@+id/btn_logout"
                      android:textColor="#fff"
                      android:background="@drawable/buttonstyle"
                      android:layout_marginTop="35dp"
                      android:layout_gravity="center_horizontal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Đăng Xuất"/>
              </LinearLayout>



          </LinearLayout>
      </androidx.core.widget.NestedScrollView>
  </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



</FrameLayout>